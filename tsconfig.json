{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve" // Next.js richiede preserve
    ,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "package/email"
    } // riferimento al pacchetto email
  ]
}